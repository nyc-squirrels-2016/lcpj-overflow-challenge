<h1>Edit <%= @question.title%></h1>
<%if @errors %>
<%@errors.each do |error|%>
  <p><%= error %></p>
<%end%>
<%end%>
<%= form_for @question do |f| %>
  <div>
  <%= f.label :title%>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :body %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Question" %>
<%end%>
<%= link_to "Delete", @question, method: :delete%>
