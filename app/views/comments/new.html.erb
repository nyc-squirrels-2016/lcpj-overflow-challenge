<h1>Make a new Comment</h1>
<%if @errors %>
<%@errors.each do |error|%>
  <p><%= error %></p>
<%end%>
<%end%>
<%if @question%>
  <%= form_for [@question, @comment] do |f| %>
    <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    </div>
    <%= f.submit "Create Comment" %>
  <%end%>
<%else%>
  <%= form_for [@answer, @comment] do |f| %>
    <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    </div>
    <%= f.submit "Create Comment" %>
  <%end%>
<%end%>
